<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/s123"
        android:id="@+id/lbInfo"
        android:textColor="@color/rikoMain"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="@string/s28"
            android:layout_marginRight="0dp" />

        <EditText
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0dp"
            android:paddingTop="5dp"
            android:id="@+id/tbWarehouse"
            android:background="@drawable/editText_bg_grey"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="@string/s35"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView1"
            />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbTitle"
            android:background="@drawable/editText_bg_grey" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s124"
            />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbDate"
            android:background="@drawable/editText_bg_grey"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp"
        >

        <TextView
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="@string/s125"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
             />

        <EditText
            android:textStyle="bold"
            android:textSize="16dp"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbItems"
            android:background="@drawable/editText_bg_grey" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp"
        >

        <TextView
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s67"
             />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbCreatedBy"
            android:background="@drawable/editText_bg_grey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginRight="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s18"
       />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbCreatedAt"
            android:background="@drawable/editText_bg_grey"
            />

    </LinearLayout>

    <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:background="@color/rikoLightGrey"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            >

            <Button
                android:textSize="20dp"
                android:background="@color/rikoMain"
                android:text="@string/s42"
                android:drawableLeft="@drawable/next_white"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/btNext"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"/>

            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="@color/rikoMain"
                android:text="@string/s76"
                android:drawableLeft="@drawable/confirmation_white"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/target"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <Button
            android:layout_weight="1"
            android:background="@color/rikoMain"
            android:text="@string/s77"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:drawableLeft="@drawable/logout_white"
            android:paddingLeft="10dp"
            android:id="@+id/button3"
            android:layout_marginTop="0.0dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            />

    </LinearLayout>
</LinearLayout>