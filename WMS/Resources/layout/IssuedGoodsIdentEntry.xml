<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="@string/s47" />

        <CustomAutoCompleteTextView
          android:textStyle="bold"
          android:singleLine="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.50"
          android:maxLength="30"
          android:paddingTop="5dp"
          android:background="@drawable/editText_bg_grey"
          android:id="@+id/tbIdent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >
        <TextView

            android:text="@string/s35"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:id="@+id/textView1" />

        <EditText
              android:textStyle="bold"
              android:singleLine="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="0.50"
              android:paddingTop="5dp"
              android:background="@drawable/editText_bg_grey"
              android:layout_marginRight="2dp"
              android:id="@+id/tbNaziv" />
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:text="@string/s38"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbOrderInfo"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_marginLeft="3dp"
        android:textColor="@color/rikoMain"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="@string/s139" />

        <EditText
            android:textStyle="bold"
          android:singleLine="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.50"
          android:paddingTop="5dp"
          android:background="@drawable/editText_bg_grey"
          android:layout_marginRight="2dp"
            android:id="@+id/tbOrder" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/s33"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"/>

        <EditText
            android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp"
            android:id="@+id/tbConsignee" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="@string/s39" />

        <EditText
            android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp"
            android:id="@+id/tbDeliveryDeadline" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="@string/s40" />

        <EditText
         android:textStyle="bold"
  android:singleLine="true"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="0.50"
  android:paddingTop="5dp"
  android:background="@drawable/editText_bg_grey"
  android:layout_marginRight="2dp"
            android:id="@+id/tbQty" />

    </LinearLayout>

    <TextView android:layout_height="0dip"
          android:layout_width="fill_parent"
          android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp"
            android:layout_marginBottom="4dp">

        <Button
            android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="4dp"
android:layout_marginRight="2dp"
            android:text="@string/s42"

            android:drawableLeft="@drawable/next_white"
            android:id="@+id/btNext" />

        <Button
            android:layout_weight="1"
android:textSize="20dp"
android:paddingLeft="10dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/rikoMain"
android:textColor="@color/white"
android:layout_marginLeft="2dp"
android:layout_marginRight="4dp"
            android:text="@string/s76"

            android:drawableLeft="@drawable/confirmation_white"

            android:id="@+id/btConfirm"
             />

    </LinearLayout>
     <LinearLayout
        android:weightSum="2"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="0dp"
            android:layout_marginBottom="4dp">

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:text="@string/s43"
                android:drawableLeft="@drawable/focus_white"
                android:id="@+id/button4" />

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:text="@string/s77"
                android:drawableLeft="@drawable/logout_white"
                android:id="@+id/button5"
             />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>