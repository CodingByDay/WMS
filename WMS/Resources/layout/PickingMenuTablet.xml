<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/fling"
        android:layout_below="@id/text"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/fling"
        android:id="@+id/listView1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/fling"
        android:weightSum="5"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
      
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
           />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
         />
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:id="@id/fling"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">
        <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <Button

            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="89.0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/box"
            android:paddingBottom="5dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="@string/s339"            
            android:layout_marginBottom="5dp"
            android:background="@color/rikoMain"
            android:textColor="#ffffff"
            android:id="@+id/ident" />

        <Button
            android:layout_weight="1"
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="89.0dp"
            android:drawableLeft="@drawable/order_delivery"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:background="@color/rikoMain"
            android:textColor="#ffffff"
            android:text="@string/s340"
            android:layout_marginBottom="5dp"
            android:id="@+id/order" />

        <Button
            android:layout_weight="1"
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="89.0dp"
            android:drawableLeft="@drawable/customer"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@color/rikoMain"
            android:textColor="#ffffff"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="@string/s341"
            android:layout_marginBottom="5dp"
            android:id="@+id/client" />

    </LinearLayout>
    </LinearLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>
